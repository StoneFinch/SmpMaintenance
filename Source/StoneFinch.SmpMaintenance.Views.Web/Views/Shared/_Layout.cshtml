<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @if (String.IsNullOrWhiteSpace(ViewBag.Title))
    {
        <title>StoneFinch - ASP.NET MVC 4 Simple Membership Provider Maintenance</title>
    }
    else
    {
        <title>@ViewBag.Title - StoneFinch - ASP.NET MVC 4 Simple Membership Provider Maintenance</title>
    }
    <meta name="description" content="Connect to ASP.NET MVC 4 Simple Membership Provider data store and add/remove users and roles" />
    <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/bootstrap")
    <style type="text/css">
        .center {
            float: none;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap-responsive")
    @Scripts.Render("~/bundles/modernizr")
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
    <![endif]-->
</head>
<body>
    @*sticky footer*@
    <div id="wrap">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="/" style="padding: 4px; padding-top: 8px;">
                        StoneFinch - ASP.NET MVC 4 Simple Membership Provider Maintenance
                    </a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="/Home/UserList">List Users</a></li>
                            <li><a href="/Home/UserAdd">Add New User</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="navbarspacer">&nbsp;</div>
            @RenderBody()
            @*sticky footer*@
            <div id="push"></div>
        </div>
    </div>
    @*sticky footer*@
    <div id="footer">
        <div class="container">
            <p class="muted credit" style="margin: 0; padding: 6px; font-size: 8pt;">Copyright &copy; @DateTime.Now.Year <a style="color: #999999;" href="http://stonefinch.com/">StoneFinch</a>. All rights reserved.</p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", false)
</body>
</html>
